					<Dictionaries
						section="login"
						section_key="terms"
						text="Términos & Condiciones"
					/>
				</Link>
				<Link href="#">
					<Dictionaries
						section="login"
						section_key="privacy"
						text="Políticas de privacidad"
					/>
